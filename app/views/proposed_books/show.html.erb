<h4>Proponi Scambio</h4>
<% if user_signed_in? %>
  <% if current_user.id != @proposed_book.user.id %>

    <%= form_for :proposal, :url => {:action => 'create', :controller => 'proposals'} do |f| %>
      <%= f.collection_select :libromittente_id, @user_books, :id, :nome %>
      <%= f.hidden_field :librodestinatario_id, :value => @proposed_book.id %>
      <%= f.hidden_field :mittente_id, :value => current_user.id %>
      <%= f.hidden_field :destinatario_id, :value => @proposed_book.user.id %>
      <%= f.submit "Proponi", :action => :create %>
    <% end %>
  <% end %>
<% end %>