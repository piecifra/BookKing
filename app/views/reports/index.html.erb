<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table class= "table table-striped table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user %></td>
        <td><%= report.comment %></td>
        <td><%= link_to 'Show', report, class: "btn btn-default" %></td>
        <td><%= link_to 'Edit', edit_report_path(report), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path, class: "btn btn-primary" %>
