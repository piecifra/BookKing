<p id="notice"><%= notice %></p>

<h1>Proposed Books</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Autore</th>
      <th>Genere</th>
      <th>Stato</th>
      <th>Anno</th>
      <th>Isbn</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_books.each do |proposed_book| %>
      <tr>
        <td><%= proposed_book.nome %></td>
        <td><%= proposed_book.autore %></td>
        <td><%= proposed_book.genere %></td>
        <td><%= proposed_book.stato %></td>
        <td><%= proposed_book.anno %></td>
        <td><%= proposed_book.ISBN %></td>
        <td><%= proposed_book.user.username %></td>
        <% if can? :read, proposed_book %>
        <td><%= link_to 'Show', proposed_book %></td>
        <% end %>
        <% if can? :update, proposed_book %>
        <td><%= link_to 'Edit', edit_proposed_book_path(proposed_book) %></td>
        <% end %>
        <% if can? :delete, proposed_book %>
        <td><%= link_to 'Destroy', proposed_book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Proposed Book', new_proposed_book_path %>