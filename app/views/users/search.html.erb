<% if @users.empty? %>
	<h1>No results</h1>
<% else %>
	<h1>Risultati trovati: </h1>
	<%= form_tag userssearch_path, :method => 'get' do %>
		<%= select_tag "Ordina", options_for_select([ "username", "indirizzo", "annonascita", "email"], "nome") %>
		<%= select_tag "AscDesc", options_for_select([ "crescente", "decrescente"], "crescente") %>
		<%= hidden_field_tag 'ricerca', @ricerca  %>
		<%= hidden_field_tag 'search', @value  %>
		<%= submit_tag "Ordina", :search => nil, class: "btn" %>
	<% end %>

	<div>
		<table class= "table table-striped table-bordered">
			<thead>
			    <tr>
				    <th align="right">Parametro</th>
			    	<th colspan="3"></th>
			    </tr>
			</thead>
			<tbody>
			    <% @users.each do |user| %>
			      <tr>
			        <td><%= user.username %></td>
			        <td><%= link_to 'Show', user, class: "btn btn-primary" %></td>
			      </tr>
			    <% end %>
			</tbody>
		</table>
	</div>

<% end %>
