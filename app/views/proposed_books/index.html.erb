<p id="notice"><%= notice %></p>

<h1>Proposed Books</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Autore</th>
      <th>Genere</th>
      <th>Stato</th>
      <th>Anno</th>
      <th>Isbn</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proposed_books.each do |proposed_book| %>
      <tr>
        <td><%= proposed_book.nome %></td>
        <td><%= proposed_book.autore %></td>
        <td><%= proposed_book.genere %></td>
        <td><%= proposed_book.stato %></td>
        <td><%= proposed_book.anno %></td>
        <td><%= proposed_book.ISBN %></td>
        <td><%= proposed_book.user.username %></td>
        <% if can? :read, proposed_book %>
        <td><%= link_to 'Mostra', proposed_book, class: "btn btn-warning" %></td>
        <% end %>
        <% if can? :update, proposed_book %>
        <td><%= link_to 'Modifica', edit_proposed_book_path(proposed_book), class: "btn btn-warning" %></td>
        <% end %>
        <% if can? :delete, proposed_book %>
        <td><%= link_to 'Elimina', proposed_book, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo libro proposto', new_proposed_book_path, class: "btn btn-lg btn-primary" %>
