<h1>Proposte Ricevute</h1>
<% if @proposal.empty? %>
	<h2>Nessuna proposta ricevuta</h2>
<% else %>
	<table class= "table table-striped table-bordered">
		<thead>
			<tr>
		      <th>Mittente</th>
		      <th>Libro da ricevere</th>
		      <th>Libro da inviare</th>
		      <th colspan=2>Decisione</th>
		      <th></th>
		    </tr>
		</thead>
		<tbody>
			<% @proposal.each do |pr| %>
				<tr>
					<td><%= pr.mittente.username %></td>
					<td><%= pr.libromittente.nome %></td>
					<td><%= pr.librodestinatario.nome %></td>
					<td><%= button_to 'Accetta', {:controller => "proposals", :action => "accetta", :proposal_id => pr.id, :method=>:post}, class: "btn btn-success"  %></td>
					<td><%= button_to 'Rifiuta', {:controller => "proposals", :action => "rifiuta", :proposal_id => pr.id, :method=>:post}, class: "btn btn-danger" %></td>
					<td><%= link_to 'Visualizza libro', pr.libromittente, class: 'btn btn-default'%></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% end %>

<h1>Scambi Effettuati</h1>
	<% if @exchange.empty? %>
	<h2>Nessuno scambio effettuato</h2>
<% else %>
	<table class="table table-striped table-bordered">
		<thead>
			<tr>
		      <th>Utente</th>
		      <th>Libro ricevuto</th>
		      <th>Libro inviato</th>
		    </tr>
		</thead>
		<tbody>
		<% @exchange.each do |e| %>
			<tr>
			<% if current_user.id == e.mittente.id %>
				<td><%= e.destinatario.username %></td>
				<td><%= e.librodestinatario %></td>
				<td><%= e.libromittente %></td>
			<% else %>
				<td><%= e.mittente.username %></td>
				<td><%= e.libromittente %></td>
				<td><%= e.librodestinatario %></td>
			<% end %>
			</tr>
		<% end %>
	</table>
<% end %>