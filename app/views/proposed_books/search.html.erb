<% if @proposed_books.empty? %>
	<h1>Nessun libro trovato</h1>
<% else %>
	<h1>Risultati trovati:</h1>
		<%= form_tag booksearch_path, :method => 'get' do %>
			<%= select_tag "Ordina", options_for_select([ "nome", "autore", "genere", "anno"], "nome") %>
			<%= select_tag "AscDesc", options_for_select([ "crescente", "decrescente"], "crescente") %>
			<%= hidden_field_tag 'ricerca', @ricerca  %>
			<%= hidden_field_tag 'search', @value  %>
			<%= submit_tag "Ordina", :search => nil, class: "btn" %>
		<% end %>

		<div>
		<table class= "table table-striped table-bordered">
			<thead>
			    <tr>
				    <th align="right">Parametro</th>
			    	<th colspan="3"></th>
			    </tr>
			</thead>
			<tbody>
			    <% @proposed_books.each do |book| %>
			      <tr>
			        <td><%= book.nome %></td>
			        <td><%= link_to 'Show', book, class: "btn btn-default" %></td>
			      </tr>
			    <% end %>
			</tbody>
		</table>
	</div>

<% end %>
